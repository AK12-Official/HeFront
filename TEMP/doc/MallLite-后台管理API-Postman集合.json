{
  "info": {
    "name": "MallLite后台管理系统API",
    "description": "MallLite电商系统后台管理API接口集合",
    "version": "1.0.0",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:8080/admin",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "认证授权",
      "item": [
        {
          "name": "用户注册",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"123456\",\n  \"email\": \"admin@example.com\",\n  \"nickName\": \"管理员\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/register",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "register"]
            }
          }
        },
        {
          "name": "用户登录",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.code === 200 && response.data.token) {",
                  "        pm.collectionVariables.set('token', response.data.token);",
                  "        console.log('Token saved:', response.data.token);",
                  "    }",
                  "}"
                ]
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"123456\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/login",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "login"]
            }
          }
        },
        {
          "name": "刷新Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/refreshToken",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "refreshToken"]
            }
          }
        },
        {
          "name": "获取当前用户信息",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/info",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "info"]
            }
          }
        },
        {
          "name": "用户登出",
          "request": {
            "method": "POST",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/logout",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "logout"]
            }
          }
        }
      ]
    },
    {
      "name": "用户管理",
      "item": [
        {
          "name": "分页查询用户列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/list?keyword=&pageNum=1&pageSize=5",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "list"],
              "query": [
                {
                  "key": "keyword",
                  "value": ""
                },
                {
                  "key": "pageNum",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "获取指定用户信息",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/admin/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "1"]
            }
          }
        },
        {
          "name": "修改指定用户信息",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"admin\",\n  \"email\": \"admin@example.com\",\n  \"nickName\": \"管理员\",\n  \"note\": \"超级管理员\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/admin/update/1",
              "host": ["{{baseUrl}}"],
              "path": ["admin", "update", "1"]
            }
          }
        }
      ]
    },
    {
      "name": "商品管理",
      "item": [
        {
          "name": "创建商品",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"brandId\": 1,\n  \"productCategoryId\": 1,\n  \"name\": \"苹果iPhone 14\",\n  \"pic\": \"http://example.com/iphone14.jpg\",\n  \"productSn\": \"IP14001\",\n  \"price\": 6999.00,\n  \"stock\": 1000\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/product/create",
              "host": ["{{baseUrl}}"],
              "path": ["product", "create"]
            }
          }
        },
        {
          "name": "查询商品列表",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/product/list?pageNum=1&pageSize=5",
              "host": ["{{baseUrl}}"],
              "path": ["product", "list"],
              "query": [
                {
                  "key": "pageNum",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "5"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "订单管理",
      "item": [
        {
          "name": "查询订单",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/order/list?pageNum=1&pageSize=5",
              "host": ["{{baseUrl}}"],
              "path": ["order", "list"],
              "query": [
                {
                  "key": "pageNum",
                  "value": "1"
                },
                {
                  "key": "pageSize",
                  "value": "5"
                }
              ]
            }
          }
        },
        {
          "name": "获取订单详情",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/order/1",
              "host": ["{{baseUrl}}"],
              "path": ["order", "1"]
            }
          }
        }
      ]
    }
  ]
}
